@model DevicesListViewModel

<h1>@Model.CurrentSection</h1>

@foreach (var device in Model.Devices)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@device.ImageThumbnailUrl" alt="">
            <div class="caption">
                <h3 class="pull-right">@device.DeviceId.ToString("c")</h3>
                <h3>
                    <a asp-controller="Device" asp-action="Details" asp-route-id="@device.DeviceId">@device.Name</a>
                </h3>
                <p>@device.ShortDescription</p>
            </div>
        </div>
    </div>
}

